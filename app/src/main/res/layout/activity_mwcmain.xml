<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hwads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/clors_dis">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="My HMS Test"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />



        <Button

            android:id="@+id/button_bankcard"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:onClick="loadBankCardRecognitionBtnClick"
            android:text="@string/bcr_s"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button

            android:id="@+id/button_idcard"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:onClick="loadIdCardRecognitionBtnClick"
            android:text="@string/icr_s"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button

            android:id="@+id/button_text"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:onClick="loadTextRecognitionBtnClick"
            android:text="@string/text_detection_s"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button

            android:id="@+id/button_p_to_text"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:onClick="loadTextRecognitionPicBtnClick"
            android:text="@string/translate_v_p"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button

            android:id="@+id/button_scan1"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:onClick="loadScanKitBtnClick"
            android:text="@string/default_view_decoe"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_scan3"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:onClick="newViewBtnClick"
            android:text="@string/customized_view_decode"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_scan4"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:onClick="bitmapBtnClick"
            android:text="@string/bitmap_api_decode"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />


        <Button
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:onClick="generateQRCodeBtnClick"
            android:text="@string/generate_QR_code"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <com.huawei.hms.ads.banner.BannerView
            android:id="@+id/hw_banner_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            hwads:adId="testw6vs28auh3"
            hwads:bannerSize="BANNER_SIZE_360_57">

        </com.huawei.hms.ads.banner.BannerView>

        <Button
            android:id="@+id/button_location"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@color/black"
            android:onClick="openLocationBtnClick"
            android:text="Open Location Kit-1"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_LocationKitDemo"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:onClick="openLocationKitBtnClick"
            android:text="Open Location Kit-2"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_PushKitDemo"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:onClick="openPushKitBtnClick"
            android:text="Open Push Kit"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <com.huawei.hms.ads.splash.SplashView
            android:id="@+id/splash_ad_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_above="@id/logo">

        </com.huawei.hms.ads.splash.SplashView>

    </LinearLayout>

</RelativeLayout>